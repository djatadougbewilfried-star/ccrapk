{
  "expo": {
    "name": "CCR",
    "slug": "ccr-apk",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/images/logo.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./src/assets/images/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#1E3A5F"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ccr.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "L'application CCR utilise la caméra pour prendre des photos de profil.",
        "NSPhotoLibraryUsageDescription": "L'application CCR accède à vos photos pour définir votre photo de profil.",
        "NSLocationWhenInUseUsageDescription": "L'application CCR utilise votre position pour enregistrer votre présence aux cultes.",
        "NSLocationAlwaysUsageDescription": "L'application CCR utilise votre position pour enregistrer votre présence aux cultes."
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/images/logo.png",
        "backgroundColor": "#1E3A5F"
      },
      "package": "com.ccr.app",
      "versionCode": 1,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.VIBRATE",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./src/assets/images/logo.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "L'application CCR utilise votre position pour enregistrer votre présence aux cultes.",
          "locationWhenInUsePermission": "L'application CCR utilise votre position pour enregistrer votre présence aux cultes."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "L'application CCR accède à vos photos pour définir votre photo de profil.",
          "cameraPermission": "L'application CCR utilise la caméra pour prendre des photos de profil."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./src/assets/images/logo.png",
          "color": "#D4A84B",
          "sounds": []
        }
      ],
      "expo-secure-store",
      "expo-font"
    ],
    "scheme": "ccr-app",
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "a4c5af2b-9070-4c2a-850d-8e9567034fa4"
      }
    },
    "owner": "willydjata1s-organization",
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/a4c5af2b-9070-4c2a-850d-8e9567034fa4",
      "fallbackToCacheTimeout": 30000,
      "checkAutomatically": "ON_LOAD"
    }
  }
}
